#!/bin/bash
set -e

case "$1" in
  -v|--version)
    version="$2"
esac

# Resolve version
NGINX_VERSION=1.9.12
if [ ! -z "${OPENSHIFT_NGINX_VERSION}" ] && [ -d "${OPENSHIFT_ELASTICSEARCH_DIR}/usr/nginx-${OPENSHIFT_NGINX_VERSION}/" ]; then
    NGINX_VERSION="${OPENSHIFT_NGINX_VERSION}"
elif [ -d "${OPENSHIFT_ELASTICSEARCH_DIR}/usr/nginx-${version}/" ]; then
    NGINX_VERSION="${version}"
fi

# Create dirs
dirs=( "logs" "run" )
for dir in ${dirs[@]}; do
    mkdir -p "${OPENSHIFT_ELASTICSEARCH_DIR}/${dir}"
done

# Set version env variable
export OPENSHIFT_NGINX_VERSION=${NGINX_VERSION}

echo "${NGINX_VERSION}" > ${OPENSHIFT_ELASTICSEARCH_DIR}/env/OPENSHIFT_NGINX_VERSION
echo "${OPENSHIFT_ELASTICSEARCH_DIR}/usr/nginx-${OPENSHIFT_NGINX_VERSION}" > ${OPENSHIFT_ELASTICSEARCH_DIR}/env/OPENSHIFT_NGINX_VERSION_DIR
